<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.jagieloadrian.darksoulsprogressbar</id>
    <name>Darksouls-Progress-Bar</name>
    <vendor>jagieloadrian</vendor>

    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
        <statusBarWidgetFactory
                implementation="com.github.jagieloadrian.darksoulsprogressbar.service.DSSpinnerStatusBarFactory"
                id="com.github.jagieloadrian.darksoulsprogressbar.service.DSSpinnerStatusBarFactory"/>
        <postStartupActivity
                implementation="com.github.jagieloadrian.darksoulsprogressbar.service.TestFailureStartActivity"/>
        <projectConfigurable instance="com.github.jagieloadrian.darksoulsprogressbar.settings.DSPluginConfigurable"
                             displayName="DarkSouls progress bar"
                             id="com.github.jagieloadrian.darksoulsprogressbar.settings.DSPluginConfigurable"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.jagieloadrian.darksoulsprogressbar.listeners.DSProgressBarComponent"
                  topic="com.intellij.ide.ui.LafManagerListener"/>
        <listener class="com.github.jagieloadrian.darksoulsprogressbar.listeners.DSProgressBarComponent"
                  topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>
</idea-plugin>
